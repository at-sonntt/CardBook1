<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_cell_person_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_cell_person_name_label">

        <View
            android:id="@+id/imgB"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewBottom"
            android:layout_alignTop="@+id/layoutContent"
            android:layout_marginLeft="10dp"
            android:background="#FFCC33"
            tools:ignore="RtlHardcoded">

        </View>

        <ImageView
            android:id="@+id/imgList"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_oval"
            tools:ignore="ContentDescription"/>

        <RelativeLayout
            android:id="@+id/layoutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imgList"
            android:background="@drawable/ic_chat"
            android:gravity="center"
            android:padding="10dp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人の名前を行い :"
                android:textColor="#fff"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_recylce_margin"
                android:layout_toRightOf="@+id/tvTitle"
                android:textColor="#336633"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:id="@+id/tvTitleTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="5dp"
                android:text="人の名前を行い :"
                android:textColor="#fff"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvNameTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginLeft="@dimen/item_recylce_margin"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvTitleTwo"
                android:textColor="#336633"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:id="@+id/tvTitleThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleTwo"
                android:layout_marginTop="5dp"
                android:text="人の名前を行い :"
                android:textColor="#fff"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvNameThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleTwo"
                android:layout_marginLeft="@dimen/item_recylce_margin"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvTitleThree"

                android:textColor="#CC3300"
                tools:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layoutContent"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</RelativeLayout>